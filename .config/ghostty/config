theme = "GitHub Dark"
# theme = "GitHub-Dark-High-Contrast"

shell-integration-features = no-cursor,no-sudo,title

mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

macos-non-native-fullscreen = true
macos-titlebar-style = tabs
window-save-state = always
window-padding-balance = true
window-colorspace = "display-p3"

copy-on-select = clipboard

# keybindings
keybind = cmd+s>r=reload_config

# add cursor on next occurrence in nvim
keybind = cmd+d=unbind
# select all in nvim
keybind = cmd+a=unbind

# tab navigation
keybind = alt+cmd+right=next_tab
keybind = alt+cmd+left=previous_tab
keybind = alt+cmd+shift+left=move_tab:-1
keybind = alt+cmd+shift+right=move_tab:1

keybind = alt+cmd+l=next_tab
keybind = alt+cmd+h=previous_tab
keybind = alt+cmd+shift+h=move_tab:-1
keybind = alt+cmd+shift+l=move_tab:1

# split creation
keybind = cmd+shift+r=new_split:right

# Reset screen instead of clear screen
keybind = super+k=reset
