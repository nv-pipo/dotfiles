# used by nvim
keybind = cmd+d=unbind
keybind = cmd+a=unbind

# toggle fullscreen/zoom mode
keybind = cmd+alt+f=toggle_fullscreen
# Reset screen instead of clear screen
keybind = super+r=reset

# delete forward fix keybindings
keybind = alt+delete=text:\x1bd
keybind = cmd+delete=text:\x0b
keybind = delete=text:\x04

# delete previous word
keybind = alt+backspace=text:\x17