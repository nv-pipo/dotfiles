theme = "GitHub Dark"
# theme = "GitHub-Dark-High-Contrast"

shell-integration-features = no-cursor,sudo,title

mouse-hide-while-typing = true
mouse-scroll-multiplier = 2

macos-non-native-fullscreen = true
macos-titlebar-style = hidden
fullscreen = true
window-decoration = false
window-padding-balance = true
window-colorspace = "display-p3"

copy-on-select = clipboard

# keybindings
keybind = cmd+s>r=reload_config

# unbinds
# add cursor on next occurrence in nvim
keybind = cmd+d=unbind
# select all in nvim
keybind = cmd+a=unbind
# tabs
keybind = alt+h=unbind
keybind = alt+l=unbind
keybind = cmd+t=unbind

# split creation
keybind = cmd+shift+r=new_split:right

# Reset screen instead of clear screen
keybind = super+k=reset

# delete forward fix keybindings
keybind = alt+delete=text:\x1bd
keybind = delete=text:\x04
